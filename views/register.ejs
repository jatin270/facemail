<% include ./partials/header %>
<link rel="stylesheet" href="/stylesheets/messageWindow.css">
<style>
    #myProgress {
        width: 100%;
        background-color: #ddd;
    }

    #myBar {
        width: 10%;
        height: 30px;
        background-color: #4CAF50;
        text-align: center;
        line-height: 30px;
        color: white;
    }
</style>

<div class="container">
<h1>Sign Up</h1>

<form id="registrationform">
    <input type="text" id="username" placeholder="username">
    <br>
    <input type="password" id="password" placeholder="password">
    <br>
    <input type="password" id="repassword" placeholder="repassword">
    <br>
    <input type="email" id="email" placeholder="Email Id">
    <br>
    <input type="file" name="profilepic" id="profilepic">
    <br>
    <input type="submit" value="SignUp">
</form>
</div>


<div id="myModal" class="modal shrink">

<!-- Modal content -->
<div class="modal-content" >
<div class="modal-header">
<span id="span" class="close">&times;</span>
<h2>Registering..............</h2>
</div>
<div class="modal-body">
    <div id="myProgress">
        <div id="myBar">5%</div>
    </div>

</div>
<div class="modal-footer">
<h3>Modal Footer</h3>
</div>
</div>
</div>


<script src="/js/firebase/newuser.js"></script>
<script src="/js/messageWindow.js"></script>
<% include ./partials/footer %>