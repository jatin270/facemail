<% include ./partials/header %>
<link rel="stylesheet" href="/stylesheets/util/messageWindow.css">
<link rel="stylesheet" href="/stylesheets/util/progressbar.css">


<div id="myModal" class="modal">

<!-- Modal content -->
<div class="modal-content" >
<div class="modal-header">
<span id="span" class="close">&times;</span>
<h2>Registering..............</h2>
</div>
<div class="modal-body">
    <div id="myProgress">
        <div id="myBar">5%</div>
    </div>

</div>
<div class="modal-footer">
<h3>Modal Footer</h3>
</div>
</div>
</div>



<div class="container">
<form class="form-horizontal" id="registrationform">
    <fieldset>
        <div id="legend">
            <legend class="">Register</legend>
        </div>
        <div class="control-group">
            <!-- Username -->
            <label class="control-label"  for="username">Username</label>
            <div class="controls">
                <input type="text" class="input-lg form-control" id="username" name="username" placeholder="" class="input-xlarge">
                <p class="help-block">Username can contain any letters or numbers, without spaces</p>
            </div>
        </div>

        <div class="control-group">
            <!-- E-mail -->
            <label class="control-label" for="email">E-mail</label>
            <div class="controls">
                <input type="text" class="input-lg form-control" id="email" name="email" placeholder="" class="input-xlarge">
                <p class="help-block">Please provide your E-mail</p>
            </div>
        </div>

        <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Password</label>
            <div class="controls">
                <input type="password" class="input-lg form-control" id="password" name="password" placeholder="" class="input-xlarge">
                <div class="row">
                    <div class="col-sm-6">
                        <span id="8char" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> 8 Characters Long<br>
                        <span id="ucase" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> One Uppercase Letter
                    </div>
                    <div class="col-sm-6">
                        <span id="lcase" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> One Lowercase Letter<br>
                        <span id="num" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> One Number
                    </div>
                </div>
            </div>
        </div>

        <div class="control-group">
            <!-- Password -->
            <label class="control-label"  for="password_confirm">Password (Confirm)</label>
            <div class="controls">
                <input type="password" class="input-lg form-control" id="repassword" name="password_confirm" placeholder="" class="input-xlarge">
                <div class="row">
                    <div class="col-sm-12">
                        <span id="pwmatch" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Passwords Match
                    </div>
                </div>
            </div>
        </div>
        <div class="control-group">
            <!-- Password -->
            <label class="control-label"  for="profile_pic">Picture Upload</label>
            <div class="controls">
                <input type="file" class="input-lg form-control" id="profilepic" name="profilepic" placeholder="" class="input-xlarge">
                <p class="help-block">Please Upload</p>
            </div>
        </div>
        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-success">Register</button>
            </div>
        </div>
    </fieldset>
</form>
</div>

<script src="/js/firebase/newuser.js"></script>
<script src="/js/messageWindow.js"></script>
<script src="/js/passwordvalidation.js"></script>

<% include ./partials/footer %>