<% include ./partials/header %>
<link rel="stylesheet" href="/stylesheets/pages/profilepage.css">
<link rel="stylesheet" href="/stylesheets/util/messageWindow.css">

<div class="container">
<div class="row">
<div class="col-lg-8">
<div class="col-lg-12 col-sm-12">
    <div class="card hovercard">
        <div class="card-background">
            <img class="card-bkimg" alt="" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRzIwkNbGjUbzewkWiruZJ-685XdqHxrK2IXZIVGVt-709st9ip">
            <!-- http://lorempixel.com/850/280/people/9/ -->
        </div>
        <div class="useravatar">
            <img alt="" src="<%=userdetail.profileurl%>">
        </div>
        <div class="card-info"> <span class="card-title"><%=userdetail.username%></span>
        </div>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" onclick="openCity(event, 'profileinfo')" id="defaultOpen" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <div class="hidden-xs">Personal Info</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" onclick="openCity(event, 'followers')" id="fav" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                <div class="hidden-xs">Followers:<%=followers%></div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" onclick="openCity(event, 'follow')" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <div class="hidden-xs">Following:<%=following%></div>
            </button>
        </div>
    </div>



<div class="well tab-content">
    <div id="profileinfo" class="tabcontent">
        <p>Username : <%= userdetail.username %></p>
        <p>EmailId :  <%= userdetail.email %></p>
    </div>

    <div id="followers" class="tabcontent">
        <%followerslist.forEach(function (t) {%>
        <li><a href="/users/<%=t%>"><%=t%></a></li>
        <%})%>
    </div>
    <div id="follow" class="tabcontent">
        <%followinglist.forEach(function (t) {%>
        <li><a href="/users/<%=t%>"><%=t%></a></li>
        <%})%>
    </div>
</div>
</div>
</div>
    <div class="col-lg-4 center-block" >

        <br>
        <br>
        <br>
        <br>
        <br>

        <% if (currentUser){%>
    <% if(!flag) {%>
    <form id="followrequest">
        <input type="hidden" id="emailfollow" name="email" value="<%=userdetail.email%>">
        <input type="submit" value="FOLLOW" class="btn btn-success">
    </form>
    <% }else{%>
    <form id="unfollowrequest">
        <input type="hidden"id="emailunfollow" name="email" value="<%=userdetail.email%>">
        <input type="submit" value="UNFOLLOW">
        <%}%>
    </form>
    <%}%>
    <br>

    <form action="/users/chat">
        <input type="hidden" name="from" value="<%=from%>">
        <input type="hidden" name="to" value="<%=userdetail.email%>">
        <input type="submit" value="Message" class="btn btn-primary btn-md">
    </form>
        <br>
        <br>
        <br>
        <% if (currentUser==userdetail.email){%>
        <div class="filebox">
            <div class="filebox-header">
                <h1 style="display: inline">File</h1>
                <button class="btn btn-primary" style="float:right" onclick="">Refresh</button>
            </div>
            <div id="datalist" class="filebox-content">
            </div>
        </div>
        <%}%>
</div>
</div>
</div>
<div id="viewer" class="modal">
    <div id="viewer-content" class="modal-content">

    </div>
</div>


<script src="/js/profilepage.js"></script>

<% include ./partials/footer %>